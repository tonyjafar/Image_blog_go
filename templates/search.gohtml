{{template "header" .}}
<br>
<br>
<div class="container">
  <div class="jumbotron">
 <form method="post">
  <div class="form-group">
    <label>Search:</label>
    <input type="text" class="form-control" name="search" placeholder="Description">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form> 
</div>
</div>
<div class="container">
<a class="btn btn-info" href="/search?search={{.Search}}&all">View All Images</a>
<div class="row justify-content-center">
<div class="col-md-8">
<div class="row">
{{range .ListMem}}
<a href="/assets/{{.}}"  data-toggle="lightbox" data-gallery="example-gallery" class="col-sm-4"><img src="/assets/thumb/{{.}}" class="img-fluid img-thumbnail"></a>
{{end}}
</div>
<br><br>
{{if .Prev}}
<a class="btn btn-info pull-left" href="/search?search={{.Search}}&page={{red .PageNumber}}">Previous Page</a>
{{end}}
{{if .Next}}
<a class="btn btn-info pull-right" href="/search?search={{.Search}}&page={{add .PageNumber}}">Next Page</a>
{{end}}
</div>
</div>
</div>
<script>
$(document).on('click', '[data-toggle="lightbox"]', function(event) {
                event.preventDefault();
                $(this).ekkoLightbox();
            });
</script>
<br>
<div class="container">
{{ if not . }}
    <h4>Sorry. No matching results found</h4>
{{else}}
<h4>{{.ListLength}} matching results found</h4>
{{ end }}
</div>
<br>
{{template "footer"}}